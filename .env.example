# Rachel8 Configuration
# Run 'bun run setup' to fill these values interactively

# Telegram Bot Token (from @BotFather on Telegram)
TELEGRAM_BOT_TOKEN=

# Your Telegram user ID (send /start to @userinfobot to find it)
OWNER_TELEGRAM_USER_ID=

# Path to shared folder
SHARED_FOLDER_PATH=

# Environment (development | production | test)
NODE_ENV=production

# Log level (debug | info | warn | error)
LOG_LEVEL=info

# STT â€” speech-to-text for voice messages
# Provider: "groq" (default, free) or "openai" ($0.006/min)
STT_PROVIDER=groq
GROQ_API_KEY=
# OPENAI_API_KEY=  # Only needed if STT_PROVIDER=openai
